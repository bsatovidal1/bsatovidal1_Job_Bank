@model bsatovidal1_Job_Bank.Models.Posting

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Posting</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOpen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOpen)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClosingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClosingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostingFiles)
        </dt>
        <dd class="col-sm-10">
            @{
                foreach (var d in Model.PostingFiles)
                {
                    <a asp-action="Download" asp-route-id="@d.ID">@d.FileName</a> <br />
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
